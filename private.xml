<?xml version="1.0"?>
<root>
  <appdef>
    <appname>Microsoft Remote Desktop</appname>
    <equal>com.microsoft.rdc.mac</equal>
  </appdef>
  <item>
    <name>private.xml</name>
    <item>
      <name>Control/TAB</name>
      <identifier>private.ctrltab</identifier>
      <only>Microsoft Remote Desktop</only>
      <autogen> __KeyToKey__ KeyCode::TAB, ModifierFlag::CONTROL_L, KeyCode::TAB, ModifierFlag::COMMAND_L </autogen>
    </item>
    <item>
      <name>Rotate Command/Ctrl/Option (only Microsoft Remote Desktop)</name>
      <identifier>private.rotateCmdCtrlOptInMicrosoftRemoteDesktop</identifier>
      <only>Microsoft Remote Desktop</only>
      <autogen> __KeyToKey__ KeyCode::COMMAND_L, KeyCode::CONTROL_L </autogen>
<!--       <autogen> __KeyToKey__ KeyCode::CONTROL_L, KeyCode::OPTION_L </autogen>
      <autogen> __KeyToKey__ KeyCode::OPTION_L, KeyCode::COMMAND_L </autogen>
 -->    </item>
    <item>
      <name>Brackets (only Microsoft Remote Desktop)</name>
      <identifier>private.brackets</identifier>
      <only>Microsoft Remote Desktop</only>
      <autogen> __KeyToKey__ KeyCode::OPTION_L, KeyCode::OPTION_R </autogen>
      <autogen> __KeyToKey__ KeyCode::KEY_5, ModifierFlag::OPTION_R, KeyCode::BRACKET_LEFT, ModifierFlag::OPTION_R </autogen>
      <autogen> __KeyToKey__ KeyCode::KEY_6, ModifierFlag::OPTION_R, KeyCode::BRACKET_RIGHT, ModifierFlag::OPTION_R </autogen>
      <autogen> __KeyToKey__ KeyCode::KEY_8, ModifierFlag::OPTION_R, KeyCode::QUOTE, ModifierFlag::OPTION_R </autogen>
      <autogen> __KeyToKey__ KeyCode::KEY_9, ModifierFlag::OPTION_R, KeyCode::BACKSLASH, ModifierFlag::OPTION_R </autogen>
    </item>
    <item>
      <name>BackSlash (only Microsoft Remote Desktop)</name>
      <identifier>private.backslash</identifier>
      <only>Microsoft Remote Desktop</only>
      <autogen> __KeyToKey__ KeyCode::KEY_7, ModifierFlag::SHIFT_L | ModifierFlag::OPTION_R, KeyCode::BACKQUOTE, ModifierFlag::OPTION_R </autogen>
    </item>
    <item>
      <name>line selection (only Microsoft Remote Desktop)</name>
      <identifier>private.selections</identifier>
      <only>Microsoft Remote Desktop</only>
      <autogen> __KeyToKey__ KeyCode::CURSOR_RIGHT, ModifierFlag::CONTROL_L, KeyCode::CURSOR_RIGHT, ModifierFlag::FN </autogen>
      <autogen> __KeyToKey__ KeyCode::CURSOR_LEFT, ModifierFlag::CONTROL_L, KeyCode::CURSOR_LEFT, ModifierFlag::FN </autogen>
      <autogen> __KeyToKey__ KeyCode::CURSOR_UP, ModifierFlag::CONTROL_L, KeyCode::CURSOR_UP, ModifierFlag::FN </autogen>
      <autogen> __KeyToKey__ KeyCode::CURSOR_DOWN, ModifierFlag::CONTROL_L, KeyCode::CURSOR_DOWN, ModifierFlag::FN </autogen>
    </item>
    <item>
      <name>Backquote(`) to KANA/EISUU (toggle) (except Microsoft Remote Desktop)</name>
      <identifier>private.backquoteToKanaEisuuExceptMicrosoftRemoteDesktop</identifier>
      <not>Microsoft Remote Desktop</not>
      <autogen> __KeyToKey__ KeyCode::BACKQUOTE, KeyCode::VK_JIS_TOGGLE_EISUU_KANA </autogen>
    </item>
  </item>
</root>

